# Parliament Intern Logbook System
# Environment Configuration Sample
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=localhost
DB_NAME=parliament_intern_logbook
DB_USERNAME=root
DB_PASSWORD=

# Application Settings
APP_NAME="Parliament Intern Logbook"
APP_URL=http://localhost/parliament1
APP_ENV=development

# Security Settings
SESSION_LIFETIME=7200
CSRF_TOKEN_LIFETIME=3600

# Email Settings (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_NAME="Parliament Intern Logbook"
MAIL_FROM_EMAIL=noreply@parliament.lk

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging Settings
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Settings (Optional)
CACHE_DRIVER=file
CACHE_LIFETIME=3600


